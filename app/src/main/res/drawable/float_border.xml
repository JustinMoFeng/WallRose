<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 底部矩形 -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" />
            <solid android:color="@color/float_background" /> <!-- 设置背景颜色为透明 -->
        </shape>
    </item>
    <!-- 边框 -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
            android:color="@color/black" /> <!-- 设置边框颜色 -->
            <solid android:color="@android:color/transparent" /> <!-- 设置背景颜色 -->
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" /> <!-- 设置左上和右上角的圆角半径 -->
        </shape>
    </item>
</layer-list>